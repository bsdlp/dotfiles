#!/bin/bash

if [ $1 ]
then 
    TARGET_DIR=$1
else
    TARGET_DIR=$HOME
fi

/usr/bin/stow \
    -t $TARGET_DIR/ \
    -d $( builtin cd $(dirname $0)/../../ ; pwd -P ) \
    --ignore='.git*' \
    --ignore='.gitconfig' \
    --ignore='LICENSE' \
    --ignore='README.md' \
    --ignore='TODO' \
    --ignore='bin' \
    osxdotfiles

