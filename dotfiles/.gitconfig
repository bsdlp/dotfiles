[user]
	name = Jon Chen
	email = bsd@voltaire.sh
	signingkey = 2709E8A6
[core]
	excludesfile = /Users/jchen/.gitignore_global
	pager = less -x4
[color]
	ui = true
[help]
	autocorrect = 1
[alias]
    fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
    squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
    ri = rebase --interactive --autosquash
	d = difftool
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	g = grep --break --heading --line-number
	today = !sh -c 'git diff $(git rev-list -n1 --before=\"1 day ago\" $(git rev-parse --abbrev-ref HEAD))'
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)%an <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order

[github]
	user = fly
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[push]
	default = simple
[grep]
	lineNumber = true
[http]
	cookiefile = /Users/szuhchen/.gitcookies
[commit]
	gpgsign = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[hub]
	host = git-aws.internal.justin.tv
[pull]
	rebase = true
[init]
	defaultBranch = main
